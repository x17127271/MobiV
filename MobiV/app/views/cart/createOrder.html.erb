<% provide(:title, "Checkout") %>

<div class="container">
<div id="itemsContainer">
    <h1>Thank You<br>
You have just placed an order #<%= @order.id %></h1>
</div>


   
    
    
<table id="customers">
     <% @total = 0 %>
    <% @orderitems.each do |id,quantity| %>
      <tr>
        <% item = Orderitem.find_by_id(id) %>
       
        <td><%= item.title %></td>
        <td><%= item.quantity %></td>
       <td><%=number_to_currency(item.price, :unit => "â‚¬")%></td> 
      
       </tr>
       
       <% timx = (item.quantity * item.price)%>   
       <% @total += timx %>
       <% session[:total_cart_price] = @total %>
      </tr>
    <% end %>
    
    
    <tr>
        
       <td>Order Total: &euro; <%= @total %></td>
       
      <% shipping = 30 %>
      <% @overall = shipping + @total%>
      <tr>
          <td>Shipping &euro;30</td>
          <td>You Pay &euro; <%= @overall %></td>
      </tr>

       
      </tr>
</table>
